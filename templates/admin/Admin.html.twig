<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Quai Antique{% endblock %}</title>
    <link rel="icon" href="{{ asset(path.Logo) }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block css %}
        <link rel="stylesheet" href="{{ asset(path.bootstrap) }}css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset(path.qaCss) }}qA.css">
        <link rel="stylesheet" href="{{ asset(path.qaCss) }}qaBureau.css">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block js %}
        <script src="{{ asset(path.bootstrap) }}js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset(path.qaJs) }}qAbureau.js"></script>
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body style="background-color: #D4F1F4; ">
<header>
    <!--Logo-->
    <div {{ react_component('Logo') }} ></div>
    <nav class="navbar navbar-expand-lg fixed-top {% block navAccueil %}{% endblock %}" id="nav" style="z-index: 2;">
        <div class="container-fluid justify-content-end">
            <button class="navbar-toggler" type="button"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="toggle navigation"
                    data-bs-toggle="collapse"
                    data-bs-target="#navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navigation">
                <div id="reducSurfNav">
                    <ul class="navbar-nav">
                        <li class="nav-item text-end ms-4 me-4">
                            <a href="/" class="nav-link qaNav">Accueil</a>
                        </li>
                        <li class="nav-item text-end ms-4 me-4">
                            <a href="/carte" class="nav-link qaNav">Carte</a>
                        </li>
                        <li class="nav-item align-self-end ms-4 me-md-4 {% if user %}dropdown{% endif %}">
                            {% if user %}
                                <button class="btn qabtn dropdown-toggle" type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                         class="bi bi-person-fill" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                                    </svg>
                                    {{ user.firstname }}
                                </button>
                                <ul class="dropdown-menu qabtn">
                                    <li class="dropdown-item qaNav" style="cursor:pointer;" data-bs-toggle="modal"
                                        data-bs-target="#gestion_compte">&nbsp; Gestion du Compte</li>
                                    <li class="dropdown-item">
                                        <a href="/form/connexion"
                                           class="nav-link qaNav">Changer de Compte
                                        </a>
                                    </li>
                                    {% if user.droitNote==0 %}
                                        <li class="dropdown-item"><a href="/Bureau" class="nav-link qaNav">Bureau</a></li>
                                    {% endif %}
                                    <li class="dropdown-item">
                                        <a href="/deconnexion/{{page}}" class="nav-link qaNav">
                                            Déconnexion
                                        </a>
                                    </li>
                                </ul>
                            {% else %}
                                <a href="/form/connexion">
                                    <button class="btn qabtn">Connexion</button>
                                </a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    {% if user %}
        {% if user.droitNote==0 %}
            {% if user.galerie==1 and user.produit==1 and user.horaire==1 %}
                <button id="reserverHead" style="z-index: 2;" class="btn qabtn" data-bs-toggle="modal" data-bs-target="#addAdmin">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                         class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                        <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                    </svg>
                </button>
            {% endif %}
        {% endif %}
    {% endif %}
</header>
<main style="position:relative; top:100px;">
{% if user %}
    {% if user.droitNote==0 %}
        <!--Code de la Page Bureau-->
        <div class="réducteur-space p-4"><!--Réduction de la surface-->
            {% if user.galerie==1 %}
                <div id="galerie_bureau" class="mb-5">
                    <div class="qatitle tilteBureau fs-1 ps-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                             class="bi bi-images" viewBox="0 0 16 16">
                            <path d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                            <path d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2zM14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1zM2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10z"/>
                        </svg>
                        Galerie
                    </div>
                    <div class="barre"></div>
                    <div class="message">
                        <div class="container-fluid">
                            <div class="row justify-content-center pt-3 pb-3">
                                {% for galerie in Galerie %}
                                    <div class="burImgGalerieBlock">
                                        <img src="{{ galerie.file }}" alt="{{ galerie.title }}" class="burImgGalerie"/>
                                        <div class=" pt-3 burEditGalerie">
                                            <div class="qatitleProduit text-center">{{ galerie.title }}</div>
                                            <div class="mt-4 mb-4 d-flex justify-content-center">
                                                <button class="btn qabtn" data-bs-toggle="modal" data-bs-target="#galerie_{{ galerie.id }}">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                                         class="bi bi-pen-fill" viewBox="0 0 16 16">
                                                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                                    </svg>
                                                    Éditer
                                                </button>
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <a href="/admin/galerie/delete/{{ galerie.id }}">
                                                    <button class="btn qabtn">Supprimer</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                                <div class="d-flex burImgGalerie message message-user justify-content-center
                                            align-items-center" data-bs-toggle="modal"
                                     data-bs-target="#addGalerie" style="margin: 10px; cursor:pointer;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"
                                         fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% if user.produit==1 %}
                <div id="carte_bureau" class="mb-5">
                    <div class="qatitle tilteBureau fs-1 ps-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="50" fill="currentColor"
                             class="bi bi-wallet2" viewBox="0 0 16 16">
                            <path d="M12.136.326A1.5 1.5 0 0 1 14 1.78V3h.5A1.5 1.5 0 0 1 16 4.5v9a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 13.5v-9a1.5 1.5 0 0 1 1.432-1.499L12.136.326zM5.562 3H13V1.78a.5.5 0 0 0-.621-.484L5.562 3zM1.5 4a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-13z"/>
                        </svg>
                        Carte
                    </div>
                    <div class="barre"></div>
                    <div class="message pb-3">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md">
                                    <div id="plat">
                                        <div class="qatitle fs-3 text-center burCarte burCarteTitle mt-2 mb-3">Plat</div>
                                        {% for produit in Produit.plat %}
                                            <div class="d-flex burCarte justify-content-center align-items-center mb-3">
                                                {% include 'section/_produit.html.twig' with {'produit':produit} %}
                                                <button class="btn qabtn me-2" data-bs-toggle="modal" data-bs-target="#produit_{{ produit.id }}">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                                         class="bi bi-pen-fill" viewBox="0 0 16 16">
                                                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                                    </svg>
                                                    Éditer
                                                </button>
                                                <a href="/admin/produit/delete/{{ produit.id }}">
                                                    <button class="btn qabtn me-1">Supprimer</button>
                                                </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="row">
                                        <div id="entrée">
                                            <div class="qatitle fs-3 text-center burCarte burCarteTitle mt-2 mb-3">Entrée</div>
                                            {% for produit in Produit.entree %}
                                                <div class="d-flex burCarte justify-content-center align-items-center mb-3">
                                                    {% include 'section/_produit.html.twig' with {'produit': produit} %}
                                                    <button class="btn qabtn me-2" data-bs-toggle="modal" data-bs-target="#produit_{{ produit.id }}">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                                             class="bi bi-pen-fill" viewBox="0 0 16 16">
                                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                                        </svg>
                                                        Éditer
                                                    </button>
                                                    <a href="/admin/produit/delete/{{ produit.id }}">
                                                        <button class="btn qabtn me-1">Supprimer</button>
                                                    </a>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div id="dessert">
                                            <div class="qatitle fs-3 text-center burCarte burCarteTitle mt-2 mb-3">Déssert</div>
                                            {% for produit in Produit.dessert %}
                                                <div class="d-flex burCarte justify-content-center align-items-center mb-3">
                                                    {% include 'section/_produit.html.twig' with {'produit': produit} %}
                                                    <button class="btn qabtn me-2" data-bs-toggle="modal" data-bs-target="#produit_{{ produit.id }}">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                                             class="bi bi-pen-fill" viewBox="0 0 16 16">
                                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                                        </svg>
                                                        Éditer
                                                    </button>
                                                    <a href="/admin/produit/delete/{{ produit.id }}">
                                                        <button class="btn qabtn me-1">Supprimer</button>
                                                    </a>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div id="boisson">
                                            <div class="qatitle fs-3 text-center burCarte burCarteTitle mt-2 mb-3">Boisson</div>
                                            {% for produit in Produit.boisson %}
                                                <div class="d-flex burCarte justify-content-center align-items-center mb-3">
                                                    {% include 'section/_produit.html.twig' with {'produit': produit} %}
                                                    <button class="btn qabtn me-2" data-bs-toggle="modal" data-bs-target="#produit_{{ produit.id }}">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                                             class="bi bi-pen-fill" viewBox="0 0 16 16">
                                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                                        </svg>
                                                        Éditer
                                                    </button>
                                                    <a href="/admin/produit/delete/{{ produit.id }}">
                                                        <button class="btn qabtn me-1">Supprimer</button>
                                                    </a>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex message w-25 message-user justify-content-center
                                    align-items-center p-1 mt-3 mb-3 hor-center"
                             data-bs-toggle="modal"
                             data-bs-target="#addProduit" style="cursor:pointer;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50"
                                 fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                        </div>
                    </div>
                </div>
                <div id="menu_bureau" class="mb-5">
                    <div class="qatitle tilteBureau fs-1 ps-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="50" fill="currentColor"
                             class="bi bi-card-list" viewBox="0 0 16 16">
                            <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                            <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
                        </svg>
                        Menu
                    </div>
                    <div class="barre"></div>
                    <div class="message pt-3 pb-3">
                        <div class="container-fluid">
                            <div class="row justify-content-center">
                                {% for menu in Menu %}
                                    <div class="d-flex m-2 w-75 burCarte align-items-center">
                                        <div class="container-fluid">
                                            <div class="row justify-content-center">
                                                <div class="col-9">
                                                    {% include 'section/_produit.html.twig' with {'produit':menu} %}
                                                </div>
                                                <div class="col-3">
                                                    <div class="d-flex h-50 p-2 justify-content-center align-items-center">
                                                        <button class="btn qabtn me-2" data-bs-toggle="modal" data-bs-target="#menu_{{ menu.id }}">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                                                 class="bi bi-pen-fill" viewBox="0 0 16 16">
                                                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                                            </svg>
                                                            Éditer
                                                        </button>
                                                    </div>
                                                    <div class="d-flex h-50 p-2 justify-content-center align-items-center">
                                                        <a href="/admin/menu/delete/{{ menu.id }}">
                                                            <button class="btn qabtn me-1">Supprimer</button>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="d-flex message w-25 message-user justify-content-center
                                    align-items-center p-1 mt-3 mb-3 hor-center"
                             data-bs-toggle="modal"
                             data-bs-target="#addMenu" style="cursor:pointer;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50"
                                 fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% if user.horaire==1 %}
                <div id="horaire_bureau" class="mb-5">
                    <div class="qatitle tilteBureau fs-1 ps-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                             class="bi bi-clock-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                        </svg>
                        Horaire
                    </div>
                    <div class="barre"></div>
                    <div class="message p-3">
                        <div class="container-fluid">
                            <div class="row justify-content-center">
                                <div class="col-10 burCarte">
                                    <div class="mt-3 text-center qatext">
                                        <ul class="qalist">
                                            {% for horaire in Horaire %}
                                                <li class="pb-1">
                                                    <div class="horaire">
                                                        <div class="container-fluid">
                                                            <div class="row">
                                                                <div class="col-7 text-start">{{ horaire.date }}</div>
                                                                <div class="col-5 text-end">
                                                                    <ul class="qalist">
                                                                        {% if horaire.midi!="00:00-00:00" and horaire.soir!="00:00-00:00" %}
                                                                            <li>{{ horaire.midi }}</li>
                                                                            <li>{{ horaire.soir }}</li>
                                                                        {% elseif horaire.midi!="00:00-00:00" %}
                                                                            <li>{{ horaire.midi }}</li>
                                                                        {% elseif horaire.soir!="00:00-00:00" %}
                                                                            <li>{{ horaire.soir }}</li>
                                                                        {% else %}
                                                                            <li>fermé</li>
                                                                        {% endif %}
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="d-flex ps-2 w-100 h-100 justify-content-center align-items-center">
                                        <button class="btn qabtn me-2" data-bs-toggle="modal" data-bs-target="#horaire">
