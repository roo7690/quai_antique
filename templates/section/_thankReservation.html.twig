{% apply inline_css(source('@css/qA.css')) %}
    <div class="réducteur-space carte p-4">
        <div style="align-items: center;justify-content: center;">
            <img src="{{ email.image('@img/Logo-full.png') }}" alt="logo">
        </div>
        <div class="qatitle" style="text-align: center;">Nous vous remercions pour votre réservation</div>
        <div class="qatext" style="text-align: start; margin: 50px 0 50px 50px;">
            <div>
                Au nom de : <u>{{ info.name }}</u>
            </div>
            <div>
                Nombre de couverts: <u>{{ info.nbrC }}</u> et Nombre d'enfants: <u>{{ info.nbrE }}</u>
            </div>
            <div>
                Prévue pour: {{ info.date }} à {{ info.hour }}
            </div>
        </div>
        <div class="qatext" style="text-align: center;">
            <i style="color: darkred">Attention votre réservation sera annulé à plus de 20 min de retard.</i>
            <br>
            Au plaisir de vous accueillir sous peu!
            <br>
            À Bientôt
        </div>
    </div>
{% endapply %}